{
  "name": "homieiot.ts",
  "version": "0.0.0-development",
  "description": "Homie IoT client",
  "keywords": [
    "mqtt",
    "homie",
    "homieiot",
    "iot",
    "rpi",
    "raspberrypi",
    "sensors",
    "i2c",
    "device"
  ],
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^16.1.6",
    "@types/hapi__joi": "^15.0.4",
    "@types/node": "^12.7.5",
    "async-mqtt": "^2.4.2",
    "mqtt": "^3.0.0",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@types/jest": "24.0.19",
    "@typescript-eslint/eslint-plugin": "2.4.0",
    "@typescript-eslint/parser": "2.4.0",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.5.1",
    "eslint-config-airbnb-typescript": "5.0.0",
    "eslint-config-prettier": "6.4.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "jest": "24.9.0",
    "nodemon": "1.19.4",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "semantic-release": "15.13.24",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "typedoc": "^0.15.0",
    "typedoc-plugin-markdown": "^2.2.10",
    "wait-for-expect": "^3.0.0"
  },
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "clean": "rm -rf dist",
    "commit": "git-cz",
    "docs": "run-s docs:clean docs:generate docs:config",
    "docs:clean": "rm -rf ./docs/.vuepress",
    "docs:config": "sh ./scripts/configureVuepress.sh",
    "docs:generate": "typedoc ./src/index.ts",
    "dev": "sh ./scripts/dev.sh",
    "lint": "eslint ./src --ext ts",
    "test": "sh ./scripts/test.sh",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlejandroHerr/homieiot.ts.git"
  }
}
